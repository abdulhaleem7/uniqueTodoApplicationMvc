@model UniqueTodoApplication.DTOs.CustomerDto
@{
    Layout = "_CustomerDashboardLayout";
}

<section id="main-content">
    <section class="wrapper">
        <h3>Are you sure you want to delete this Customer?</h3>
        <div style="font-size: 130%;">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    FirstName:
                </dt>
                <dd class="col-sm-10">
                    @Model.FirstName
                </dd>
                <dt class="col-sm-2">
                    LastName:
                </dt>
                <dd class="col-sm-10">
                    @Model.LastName
                </dd>
                <dt class="col-sm-2">
                    Email:
                </dt>
                <dd class="col-sm-10">
                    @Model.Email
                </dd>
                <dt class="col-sm-2">
                    MaritalStatus:
                </dt>
                <dd class="col-sm-10">
                    @Model.MaritalStatus
                </dd>
                <dt class="col-sm-2">
                    CustomerPhoto:
                </dt>
                <dd class="col-sm-10">
                    <img class="card-img" style="height:200px; width:200px" src="~/customerPhotos/@Model.CustomerPhoto" />
                    <a href="~/customerPhotos/@Model.CustomerPhoto" download="@Model.CustomerPhoto"><input class="btn btn-outline-primary" type="button" value="DownLoad" /></a>                          
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-controller="Customer" asp-action="GetAllCustomer">Back to List</a>
            </form>
        </div>
    </section>
</section>
