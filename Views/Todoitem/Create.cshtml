@using UniqueTodoApplication.Enum
@model UniqueTodoApplication.Models.TodoRequestModel
@{
    Layout = "_CustomerDashboardLayout";
}
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Create task</h3>

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Kindly fill in this form to create a task</h4>
                    <form asp-action="Create"  asp-controller="Todoitem" class="form-horizontal tasi-form">
                        <div class="form-group has-success">
                            <label asp-for="Name" class="col-sm-2 control-label col-lg-2"
                                for="inputSuccess">Name</label>
                            <div class="col-lg-10">
                                <input asp-for="Name" type="text" class="form-control" id="inputSuccess" required />
                            </div>
                        </div>
                        <div class="form-group has-warning">
                            <label class="col-sm-2 control-label col-lg-2" for="inputWarning">Description</label>
                            <div class="col-lg-10">
                                <input asp-for="Description" type="text" class="form-control" id="inputWarning"
                                    required />
                            </div>
                        </div>

                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">Priority</label>
                            <div>
                                <select asp-for="Priority" asp-items="Html.GetEnumSelectList<Priority>()">
                                    <option selected disabled>--Select Priority--</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2"
                                for="inputError">TimeInterval(00:00:00)</label>
                            <div class="col-lg-10">
                                <input asp-for="TimeInterval" type="text" class="form-control" id="inputError" />
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">StartingTime</label>
                            <div class="col-lg-10">
                                <input asp-for="StartingTime" class="form-control" id="inputError" />
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">OriginalTime</label>
                            <div class="col-lg-10">
                                <input asp-for="OriginalTime" class="form-control" id="inputError" required />

                            </div>
                        </div>
                        <div class="form-group ">
                            <input asp-action="Create" href="#myModal" type="submit" value="Add task" class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
