@model UniqueTodoApplication.DTOs.TodoitemDto
@{
    Layout = "_CustomerDashboardLayout";
}
<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Edit Form</h3>

        <div class="row mt">
            <div class="col-lg-12">
                <div class="form-panel">
                    <h4 class="mb"><i class="fa fa-angle-right"></i> Kindly fill in this form to edit a task</h4>
                    <form asp-action="Update" class="form-horizontal tasi-form" >
                        <div class="form-group has-success">
                            <label asp-for="Name" class="col-sm-2 control-label col-lg-2"
                                for="inputSuccess">Name</label>
                            <div class="col-lg-10">
                                <input asp-for="Name" type="text" value="@Model.Name" class="form-control" id="inputSuccess"
                                    required />
                            </div>
                        </div>
                        <div class="form-group has-warning">
                            <label class="col-sm-2 control-label col-lg-2" for="inputWarning">Description</label>
                            <div class="col-lg-10">
                                <input asp-for="Description" type="text" class="form-control" id="inputWarning" required />
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">TimeInterval</label>
                            <div class="col-lg-10">
                                <input asp-for="TimeInterval" class="form-control" id="inputError" />
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">StartingTime</label>
                            <div class="col-lg-10">
                                <input asp-for="StartingTime" class="form-control" id="inputError" />
                            </div>
                        </div>
                        <div class="form-group has-error">
                            <label class="col-sm-2 control-label col-lg-2" for="inputError">OriginalTime</label>
                            <div class="col-lg-10">
                                <input asp-for="OriginalTime" class="form-control" id="inputError" required />
                            </div>
                        </div>
                        <div class="form-group ">
                            <input href="#myModal" type="submit" value="Submit"  class="btn btn-success trigger-btn col-sm-12" data-toggle="modal" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </section>
</section>
