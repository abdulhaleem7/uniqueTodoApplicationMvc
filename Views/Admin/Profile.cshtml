@model UniqueTodoApplication.DTOs.AdminDto
@{
    Layout = "_AdminDashboardLayout";
}

<section id="main-content">
    <section class="wrapper">
        <h3><i class="fa fa-angle-right"></i>Profile</h3>

        <dl class="row">
            <dt class="col-sm-2">
                FirstName:
            </dt>
            <dd class="col-sm-10">
                @Model.FirstName
            </dd>
            <dt class="col-sm-2">
                LastName:
            </dt>
            <dd class="col-sm-10">
                @Model.LastName
            </dd>
            <dt class="col-sm-2">
                Email:
            </dt>
            <dd class="col-sm-10">
                @Model.Email
            </dd>
            <dt class="col-sm-2">
                AdminPhoto:
            </dt>
            <dd class="col-sm-10">
                <img class="card-img" style="height:200px; width:200px" src="~/adminPhotos/@Model.AdminPhoto" />
                <a href="~/adminPhotos/@Model.AdminPhoto" download="@Model.AdminPhoto"><input class="btn btn-outline-primary" type="button" value="DownLoad" /></a>           
            </dd>
        </dl>

        <button style="background-color:wheat;"><a asp-controller="Admin" asp-action="IndexAdmin">Back to List</a></button>
    </section>
</section>