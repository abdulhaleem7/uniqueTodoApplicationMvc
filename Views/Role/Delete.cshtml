@model UniqueTodoApplication.DTOs.RoleDto

<section id="main-content">
    <section class="wrapper">
        <h3>Are you sure you want to delete this Role?</h3>
        <div style="font-size: 130%;">
            <hr />
            <dl class="row">
                <dt class="col-sm-2">
                    Name:
                </dt>
                <dd class="col-sm-10">
                    @Model.Name
                </dd>
                <dt class="col-sm-2">
                    Description:
                </dt>
                <dd class="col-sm-10">
                    @Model.Description
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="submit" value="Delete" class="btn btn-danger" /> |
                <a asp-controller="Role" asp-action="GetAllRole">Back to List</a>
            </form>
        </div>
    </section>
</section>